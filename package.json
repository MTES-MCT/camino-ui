{
  "name": "camino-ui",
  "version": "0.22.49",
  "description": "Interface web de Camino, le cadastre minier numérique ouvert",
  "license": "AGPL-3.0-or-later",
  "engines": {
    "node": ">=14.15.0",
    "npm": ">=6.14.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MTES-MCT/camino-ui"
  },
  "author": {
    "name": "François Romain",
    "email": "francoisromain@gmail.com",
    "url": "https://francoisromain.com"
  },
  "scripts": {
    "build": "vue-cli-service build --modern",
    "commit": "npx git-cz",
    "dev": "vue-cli-service serve --open",
    "dev:update": "npm-check-updates -u && npm install && npm audit fix",
    "release": "standard-version && git push --follow-tags upstream master && npx conventional-github-releaser",
    "start": "node ./index.js",
    "test": "vue-cli-service lint && vue-cli-service test:unit --verbose && codecov",
    "test:lint": "vue-cli-service lint --fix",
    "test:cypress": "vue-cli-service test:e2e --mode development",
    "test:jest": "vue-cli-service test:unit --watch --verbose"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "connect-history-api-fallback": "^1.6.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@mapbox/stylelint-processor-arbitrary-tags": "^0.3.0",
    "@sentry/browser": "^5.27.2",
    "@sentry/integrations": "^5.27.2",
    "@types/graphql-react": "^8.1.1",
    "@types/jest": "^26.0.15",
    "@types/leaflet": "^1.5.19",
    "@types/leaflet.markercluster": "^1.4.3",
    "@types/webpack-env": "^1.15.3",
    "@vue/cli": "^4.5.8",
    "@vue/cli-plugin-babel": "^4.5.8",
    "@vue/cli-plugin-eslint": "^4.5.8",
    "@vue/cli-plugin-unit-jest": "^4.5.8",
    "@vue/cli-service": "^4.5.8",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-standard": "^5.1.2",
    "@vue/test-utils": "^1.1.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-graphql-tag": "^3.1.0",
    "chart.js": "^2.9.4",
    "codecov": "^3.8.1",
    "commitizen": "^4.2.2",
    "conventional-github-releaser": "^3.1.5",
    "cz-conventional-changelog": "^3.3.0",
    "email-validator": "^2.0.4",
    "eslint": "^7.12.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.2",
    "eslint-plugin-vue": "^7.1.0",
    "file-saver": "^2.0.2",
    "graphql": "^15.4.0",
    "graphql-react": "^12.0.1",
    "graphql-tag": "^2.11.0",
    "jest-fetch-mock": "^3.0.3",
    "json2csv": "^5.0.3",
    "leaflet": "1.7.1",
    "leaflet-fullscreen": "^1.0.2",
    "leaflet-gesture-handling": "^1.2.1",
    "leaflet.markercluster": "^1.4.1",
    "marked": "^1.2.2",
    "npm-check-updates": "^9.2.4",
    "pixrem": "^5.0.0",
    "postcss-button": "^0.3.17",
    "postcss-color-mod-function": "^3.0.3",
    "postcss-grid-fluid": "^0.3.4",
    "postcss-grid-system": "^0.4.16",
    "postcss-import": "^12.0.1",
    "postcss-inline-svg": "^4.1.0",
    "postcss-loader": "^4.0.4",
    "postcss-normalize": "^9.0.0",
    "postcss-preset-env": "^6.7.0",
    "postcss-typescale": "^0.2.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "standard-version": "^9.0.0",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "unfetch": "^4.2.0",
    "vue": "^2.6.12",
    "vue-meta": "^2.4.0",
    "vue-router": "^3.4.8",
    "vue-template-compiler": "^2.6.12",
    "vuex": "^3.5.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "jest/globals": true
    },
    "extends": [
      "plugin:vue/recommended",
      "standard",
      "prettier",
      "prettier/standard",
      "prettier/vue"
    ],
    "rules": {
      "vue/no-mutating-props": 0,
      "vue/valid-v-bind-sync": 0
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "plugins": [
      "prettier",
      "jest"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "proseWrap": "never",
    "bracketSpacing": true,
    "trailingComma": "none"
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-normalize": {},
      "postcss-typescale": {},
      "postcss-grid-system": {},
      "postcss-grid-fluid": {},
      "postcss-button": {},
      "postcss-inline-svg": {},
      "postcss-color-mod-function": {},
      "pixrem": {
        "html": false
      },
      "postcss-preset-env": {
        "stage": 0
      },
      "postcss-calc": {}
    }
  },
  "browserslist": [
    ">0.25%",
    "not op_mini all",
    "Firefox > 51",
    "iOS >= 9"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "rules": {
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "typescale",
            "gf",
            "/button-/"
          ]
        }
      ]
    },
    "ignoreFiles": [
      "./dist/**/*"
    ]
  }
}
