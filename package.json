{
  "name": "camino-ui",
  "version": "0.16.0",
  "description": "Interface web de Camino, le cadastre minier numérique ouvert",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/MTES-MCT/camino-ui"
  },
  "author": {
    "name": "François Romain",
    "email": "francoisromain@gmail.com",
    "url": "https://francoisromain.com"
  },
  "scripts": {
    "build": "vue-cli-service build --modern",
    "test": "vue-cli-service test:unit",
    "jest": "vue-cli-service test:unit --watch",
    "lint": "vue-cli-service lint",
    "dev": "vue-cli-service serve --open",
    "start": "node ./index.js",
    "commit": "npx git-cz",
    "release": "standard-version && git push --follow-tags origin master && npx conventional-github-releaser"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "connect-history-api-fallback": "^1.6.0",
    "dotenv": "^8.0.0",
    "express": "^4.16.4"
  },
  "devDependencies": {
    "@mapbox/stylelint-processor-arbitrary-tags": "^0.2.0",
    "@sentry/browser": "^5.1.2",
    "@sentry/integrations": "^5.1.2",
    "@types/jest": "^23.3.14",
    "@types/webpack-env": "^1.13.9",
    "@vue/cli-plugin-babel": "^3.7.0",
    "@vue/cli-plugin-eslint": "^3.7.0",
    "@vue/cli-plugin-unit-jest": "^3.7.0",
    "@vue/cli-service": "^3.7.0",
    "@vue/eslint-config-prettier": "^4.0.1",
    "@vue/eslint-config-standard": "^4.0.0",
    "@vue/test-utils": "^1.0.0-beta.29",
    "apollo-cache-inmemory": "^1.5.1",
    "apollo-client": "^2.5.1",
    "apollo-link": "^1.2.11",
    "apollo-link-context": "^1.0.17",
    "apollo-link-error": "^1.1.10",
    "apollo-link-http": "^1.5.14",
    "apollo-utilities": "^1.2.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-graphql-tag": "^2.1.0",
    "commitizen": "^3.1.1",
    "conventional-github-releaser": "^3.1.2",
    "cz-conventional-changelog": "^2.1.0",
    "date-format": "^2.0.0",
    "email-validator": "^2.0.4",
    "eslint": "^5.16.0",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-vue": "^5.2.2",
    "file-saver": "^2.0.1",
    "graphql": "^14.2.1",
    "graphql-tag": "^2.10.1",
    "json2csv": "^4.5.1",
    "leaflet": "^1.4.0",
    "leaflet-gesture-handling": "^1.1.8",
    "pixrem": "^5.0.0",
    "postcss-button": "^0.3.16",
    "postcss-color-mod-function": "^3.0.3",
    "postcss-grid-fluid": "^0.3.3",
    "postcss-grid-system": "^0.4.15",
    "postcss-import": "^12.0.1",
    "postcss-inline-svg": "^3.1.1",
    "postcss-loader": "^3.0.0",
    "postcss-normalize": "^7.0.1",
    "postcss-preset-env": "^6.6.0",
    "postcss-typescale": "^0.2.1",
    "slugify": "^1.3.4",
    "standard-version": "^6.0.1",
    "stylelint": "^10.0.1",
    "stylelint-config-prettier": "^5.1.0",
    "stylelint-config-standard": "^18.3.0",
    "unfetch": "^4.1.0",
    "vue": "^2.6.10",
    "vue-meta": "^1.6.0",
    "vue-router": "^3.0.6",
    "vue-template-compiler": "^2.6.10",
    "vuex": "^3.1.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "jest/globals": true
    },
    "extends": [
      "plugin:vue/recommended",
      "standard",
      "prettier",
      "prettier/standard"
    ],
    "rules": {
      "no-console": 0,
      "no-throw-literal": 0
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "plugins": [
      "prettier",
      "jest"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "proseWrap": "never",
    "bracketSpacing": true
  },
  "postcss": {
    "plugins": {
      "postcss-normalize": {},
      "postcss-import": {},
      "postcss-typescale": {},
      "postcss-grid-system": {},
      "postcss-grid-fluid": {},
      "postcss-button": {},
      "postcss-inline-svg": {},
      "postcss-color-mod-function": {},
      "pixrem": {
        "html": false
      },
      "postcss-preset-env": {
        "stage": 0
      },
      "postcss-calc": {}
    }
  },
  "browserslist": [
    ">0.25%",
    "not op_mini all",
    "Firefox > 51",
    "iOS >= 9"
  ],
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "rules": {
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "typescale",
            "gf",
            "/button-/"
          ]
        }
      ]
    },
    "ignoreFiles": [
      "./dist/**/*"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
