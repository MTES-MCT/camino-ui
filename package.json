{
  "name": "camino-ui",
  "version": "0.22.83",
  "description": "Interface web de Camino, le cadastre minier numérique ouvert",
  "license": "AGPL-3.0-or-later",
  "engines": {
    "node": ">=14.15.0",
    "npm": ">=6.14.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MTES-MCT/camino-ui"
  },
  "author": {
    "name": "François Romain",
    "email": "francoisromain@gmail.com",
    "url": "https://francoisromain.com"
  },
  "scripts": {
    "build": "vite build --emptyOutDir",
    "commit": "npx git-cz",
    "dev": "vite",
    "dev:update": "npm-check-updates -u && npm install && npm audit fix",
    "release": "git pull --rebase --tags origin master && standard-version && git push --follow-tags origin master && npx conventional-github-releaser",
    "start": "node ./index.js",
    "test": "cross-env NODE_ENV=test && prettier --check src && eslint --ext .js,.ts,.vue src && jest --verbose && codecov",
    "test:watch": "jest --watch --verbose",
    "test:simple": "jest --verbose",
    "lint": "prettier --write src && eslint --fix --ext .js,.ts,.vue src"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "connect-history-api-fallback": "^1.6.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "http-proxy-middleware": "^2.0.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.14.7",
    "@juggle/resize-observer": "^3.3.1",
    "@mapbox/stylelint-processor-arbitrary-tags": "^0.4.0",
    "@sentry/browser": "^6.9.0",
    "@sentry/integrations": "^6.9.0",
    "@types/graphql-react": "^8.1.2",
    "@types/jest": "^26.0.24",
    "@types/leaflet": "^1.7.4",
    "@types/leaflet.markercluster": "^1.4.5",
    "@types/webpack-env": "^1.16.2",
    "@typescript-eslint/parser": "^4.28.2",
    "@vitejs/plugin-legacy": "^1.4.3",
    "@vitejs/plugin-vue": "^1.2.4",
    "@vue/compiler-sfc": "^3.1.1",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-standard": "^6.0.0",
    "@vue/test-utils": "^2.0.0-rc.14",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.0.2",
    "babel-plugin-graphql-tag": "^3.3.0",
    "babel-preset-vite": "^1.0.4",
    "chalk": "^2.4.2",
    "chart.js": "^3.4.1",
    "codecov": "^3.8.2",
    "commitizen": "^4.2.4",
    "conventional-github-releaser": "^3.1.5",
    "core-js": "^3.15.2",
    "cross-env": "^7.0.3",
    "cross-fetch": "^3.1.4",
    "cz-conventional-changelog": "^3.3.0",
    "email-validator": "^2.0.4",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-vue": "^7.13.0",
    "file-saver": "^2.0.5",
    "graphql": "^15.5.1",
    "graphql-react": "^15.0.0",
    "graphql-tag": "^2.12.5",
    "husky": "^7.0.2",
    "jest": "^27.0.4",
    "jest-fetch-mock": "^3.0.3",
    "jest-serializer-vue": "^2.0.2",
    "jest-transform-stub": "^2.0.0",
    "jest-util": "^27.1.1",
    "jest-watch-typeahead": "^0.6.4",
    "json2csv": "^5.0.6",
    "leaflet": "1.7.1",
    "leaflet-fullscreen": "^1.0.2",
    "leaflet-gesture-handling": "^1.2.1",
    "leaflet-markers-canvas": "^0.2.1",
    "leaflet.markercluster": "^1.5.0",
    "npm-check-updates": "^11.8.2",
    "pixrem": "^5.0.0",
    "postcss-button": "^0.3.17",
    "postcss-calc": "^8.0.0",
    "postcss-color-mod-function": "^3.0.3",
    "postcss-grid-fluid": "^0.3.4",
    "postcss-grid-system": "^0.4.16",
    "postcss-import": "12.0.1",
    "postcss-inline-svg": "4.1.0",
    "postcss-loader": "^4.1.0",
    "postcss-normalize": "^9.0.0",
    "postcss-preset-env": "^6.7.0",
    "postcss-typescale": "^0.2.3",
    "prettier": "^2.3.2",
    "rbush": "^3.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "snarkdown": "^2.0.0",
    "standard-version": "^9.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.3.5",
    "vite": "^2.3.7",
    "vue": "^3.0.9",
    "vue-meta": "^2.4.0",
    "vue-router": "^4.0.6",
    "vue3-jest": "27.0.0-alpha.2",
    "vuex": "^4.0.0",
    "vuex-router-sync": "^6.0.0-rc.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "jest/globals": true
    },
    "extends": [
      "plugin:vue/vue3-recommended",
      "standard",
      "prettier"
    ],
    "rules": {
      "vue/no-mutating-props": 0,
      "vue/valid-v-bind-sync": 0
    },
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    },
    "plugins": [
      "jest"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "proseWrap": "never",
    "bracketSpacing": true,
    "trailingComma": "none"
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-normalize": {},
      "postcss-typescale": {},
      "postcss-grid-system": {},
      "postcss-grid-fluid": {},
      "postcss-button": {},
      "postcss-inline-svg": {},
      "postcss-color-mod-function": {},
      "pixrem": {
        "html": false
      },
      "postcss-preset-env": {
        "stage": 0
      },
      "postcss-calc": {}
    }
  },
  "browserslist": [
    ">0.5%",
    "not op_mini all",
    "not IE 11",
    "Firefox >= 60",
    "iOS >= 9"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "rules": {
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "typescale",
            "gf",
            "/button-/"
          ]
        }
      ]
    },
    "ignoreFiles": [
      "./dist/**/*"
    ]
  }
}
